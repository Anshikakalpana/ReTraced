{
  "compilerOptions": {
    "target": "ES2020",           // JS version output
    "module": "CommonJS",         // Node uses CommonJS
    "outDir": "./dist",           // Where compiled JS goes
    "rootDir": "./src",           // Where TS source lives
    "strict": true,               // Enable strict type checks
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
